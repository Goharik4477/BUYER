            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rulesFF"/>
        <TextView
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rulesFS"/>
