<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userProfile"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.buyer.BUYER.SignInSignUp.UserProfileActivity"
   >
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView_profile_dp"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="50dp"
           >

        </ImageView>

        <TextView
                android:id="@+id/textView_show_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="45dp"
                android:hint="Username"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@android:color/white"
                android:textSize="40dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_margin="20dp"
            android:background="@drawable/oval_login_background"
            android:padding="15dp">

            <ImageView
                android:id="@+id/ic_profile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_profile" />

            <TextView
                android:id="@+id/show_full_name"
                android:layout_width="221dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@+id/ic_profile"
                android:hint="username "
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/ic_email"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@id/ic_profile"
                android:layout_marginTop="25dp"
                android:background="@drawable/ic_email" />

            <TextView
                android:id="@+id/show_email"
                android:layout_width="221dp"
                android:layout_height="35dp"
                android:layout_below="@+id/show_full_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@+id/ic_email"
                android:hint="email "
                android:textSize="25dp" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/buyerandbag"
            android:layout_width="match_parent"
            android:layout_height="179dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="146dp"
                android:layout_height="116dp"

                app:srcCompat="@drawable/buyerbag" />

            <TextView
                android:id="@+id/buyer_signin_or_signup_page_buyer"
                android:layout_width="122dp"
                android:layout_height="39dp"
                android:layout_marginTop="-20dp"
                android:gravity="center"
                android:text="START"
                android:layout_marginBottom="25dp"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressbaruser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-300dp"
        android:visibility="gone"
        android:elevation="10dp"/>


</LinearLayout>