<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="BUYER.ViewHolder.AnnouncementDescription">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Announcement Description"
        android:textStyle="bold"
        android:textSize="35dp"
        android:paddingStart="15dp"
        android:textColor="@color/blue1"

        />
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/Category"
            android:layout_height="50dp"
            android:textColor="@color/blue1"
            android:textStyle="bold"
            android:background="@drawable/oval_login_background"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:padding="10dp"
            android:inputType="text"
            android:layout_marginTop="15dp"/>

<!--        1st country-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="15dp"
        android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Your country"
    android:textSize="20dp"
    android:textColor="@color/green"
    android:textStyle="bold"
    />

<EditText
    android:layout_width="match_parent"
    android:id="@+id/firstCounty"
    android:layout_height="50dp"
    android:background="@drawable/oval_login_background"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="10dp"
    android:padding="10dp"
    android:inputType="text"
    android:layout_marginTop="10dp"/>
    </LinearLayout>


<!--2nd country-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product country"
            android:textSize="20dp"
            android:textColor="@color/green"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/SecondCountry"
            android:background="@drawable/oval_login_background"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:padding="10dp"
            android:inputType="text"
            android:layout_marginTop="10dp"/>
    </LinearLayout>



<!--description-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="20dp"

            android:textColor="@color/green"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:id="@+id/Description"
            android:background="@drawable/oval_login_background"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:inputType=""
            android:layout_marginTop="10dp"/>
    </LinearLayout>



<!--        place-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place of purchase of the product"
            android:textSize="20dp"
            android:textColor="@color/green"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/address"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:hint="address or location"
            android:paddingStart="10dp"
            android:background="@drawable/oval_login_background"
            android:inputType="text"
            android:maxLength="500" />
    </LinearLayout>






<!--price-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Approximate price"
                android:textSize="20dp"
                android:textColor="@color/green"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:id="@+id/price"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:background="@drawable/oval_login_background"
                android:inputType="number"
                android:maxLength="500" />
        </LinearLayout>



<!--link-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product link"
                android:textSize="20dp"
                android:textColor="@color/green"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/link"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:background="@drawable/oval_login_background"
                android:inputType="textUri"
                android:maxLength="500" />
        </LinearLayout>



        <Button
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Public"
            android:id="@+id/buttonPublic"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="@color/blue1"
            />

    </LinearLayout>
</ScrollView>