<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/oval_login_background"
    android:layout_marginBottom="@dimen/_10ssp"
    android:padding="@dimen/_10ssp"
    android:layout_width="match_parent"

                xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_height="wrap_content">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageProfileNotification"
        android:layout_width="@dimen/_40sdp"
        android:background="@drawable/baseline_account_circle_24"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_oval="true"
        android:layout_height="@dimen/_40sdp"/>
    <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/ViewSupporter"
        app:layout_constraintBottom_toBottomOf="@+id/imageProfileNotification"
        app:layout_constraintStart_toEndOf="@+id/imageProfileNotification"
        app:layout_constraintTop_toTopOf="@+id/imageProfileNotification"/>

    <TextView
        android:id="@+id/textNotification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10ssp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/blue1"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintBottom_toTopOf="@+id/ViewSupporter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageProfileNotification" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:ellipsize="end"
        android:id="@+id/textTimeNotification"
        android:maxLines="1"
        android:textColor="@color/grey"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageProfileNotification"
        app:layout_constraintTop_toBottomOf="@+id/ViewSupporter"/>



</androidx.constraintlayout.widget.ConstraintLayout>