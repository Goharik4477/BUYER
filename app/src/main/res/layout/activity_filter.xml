<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/blue1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BUYER.b.FilterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_40sdp"
        android:layout_marginTop="8dp"
        android:padding="@dimen/_40sdp"
        android:orientation="vertical"

        android:background="@drawable/posts_b"

        tools:layout_editor_absoluteX="52dp">

        <TextView

            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="80dp"
            android:text="FILTERS"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
 />

        <LinearLayout
            android:background="@drawable/posts_b"
            android:layout_width="match_parent"
            android:padding="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_20sdp"

            android:orientation="horizontal"
            android:id="@id/Category"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_category"
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:layout_marginEnd="@dimen/_10ssp"
                android:backgroundTint="@color/white"
                android:background="@drawable/category" />

            <TextView
                android:id="@+id/Category_t"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:layout_alignParentEnd="true"

                android:textColor="@color/white"
                android:layout_toEndOf="@+id/ic_category"
                android:textSize="25dp" />
        </LinearLayout>



        <LinearLayout
            android:background="@drawable/posts_b"
            android:layout_width="match_parent"
            android:padding="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_20sdp"

            android:orientation="horizontal"
           android:id="@+id/Fcountry"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_country"
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:layout_marginEnd="@dimen/_10ssp"
                android:backgroundTint="@color/white"
                android:background="@drawable/category" />

            <TextView
                android:id="@+id/f_country_t"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:layout_toEndOf="@+id/ic_category"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/posts_b"
            android:padding="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/s_country"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_country_s"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="@dimen/_10ssp"
                android:backgroundTint="@color/white"
                android:background="@drawable/category" />

            <TextView
                android:id="@+id/s_country_t"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="From"
                android:layout_alignParentEnd="true"

                android:textColor="@color/white"
                android:layout_toEndOf="@+id/ic_category"
                android:textSize="25dp" />
        </LinearLayout>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/useFilter"
    android:layout_marginTop="@dimen/_10ssp"
    android:background="@drawable/posts_b"
    android:text="use"/>


    </LinearLayout>


</RelativeLayout>