<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"

    android:padding="@dimen/_10ssp"
    android:background="@color/blue1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BUYER.b.FilterActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginStart="@dimen/_10ssp"
        android:layout_marginEnd="@dimen/_10ssp"

        android:background="@drawable/posts_b"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        tools:layout_editor_absoluteX="52dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"

                android:text="FILTERS"
                android:textAlignment="center"
                android:textColor="@color/blue3"
                android:textSize="25dp"
                android:textStyle="bold" />
            <TextView

                android:id="@+id/clearFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"

                android:text="Reset"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10ssp"
                    android:background="@drawable/posts_b"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Sort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sort by"
                        android:textColor="@color/white"
                        android:textSize="25dp" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"

                        android:background="@drawable/posts_b"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10ssp">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:id="@+id/high_service_price"
                            android:buttonTint="@color/white"
                            android:text="High price for the service"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15ssp"
                            android:layout_height="wrap_content"/>







                    </LinearLayout>
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"

                        android:background="@drawable/posts_b"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10ssp">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:id="@+id/low_service_price"
                            android:buttonTint="@color/white"

                            android:text="Low price for the service"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15ssp"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"

                        android:background="@drawable/posts_b"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10ssp">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:id="@+id/new_post_rad"
                            android:text="New ones first"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15ssp"
                            android:buttonTint="@color/white"
                            android:layout_height="wrap_content"/>




                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"

                        android:background="@drawable/posts_b"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10ssp">

                        <CheckBox
                            android:id="@+id/old_post_rad"
                            android:text="Old ones first"
                            android:textColor="@color/white"
                            android:buttonTint="@color/white"
                            android:textSize="@dimen/_15ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />





                    </LinearLayout>




                </LinearLayout>






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8sdp"
                    android:background="@drawable/posts_b"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/service_ic"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/baseline_credit_card_24"
                        android:backgroundTint="@color/white"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min service price:"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                    <EditText
                        android:id="@+id/min_price_input"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="10"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/white"
                        android:padding="8dp"
                        android:layout_marginStart="@dimen/_5sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8sdp"
                    android:background="@drawable/posts_b"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/weight_ic"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/libra"
                        android:backgroundTint="@color/white"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max product weight:"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                    <EditText
                        android:id="@+id/max_weight_input"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="10"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/white"
                        android:padding="8dp"
                        android:layout_marginStart="@dimen/_5sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kg"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@id/Category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"

                    android:background="@drawable/posts_b"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10ssp">

                    <ImageView
                        android:id="@+id/ic_category"
                        android:layout_width="35dp"
                        android:layout_height="35dp"

                        android:layout_marginEnd="@dimen/_10ssp"
                        android:background="@drawable/category"
                        android:backgroundTint="@color/white" />

                    <TextView
                        android:id="@+id/Category_t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:text="Category"
                        android:textColor="@color/white"
                        android:textSize="25dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/s_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/posts_b"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10ssp">

                    <ImageView
                        android:id="@+id/ic_country_s"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="@dimen/_10ssp"
                        android:background="@drawable/baseline_flight_takeoff_24"
                        android:backgroundTint="@color/white" />

                    <TextView
                        android:id="@+id/s_country_t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:text="Country of origin"
                        android:textColor="@color/white"
                        android:textSize="25dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Fcountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"

                    android:background="@drawable/posts_b"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10ssp">

                    <ImageView
                        android:id="@+id/ic_country"
                        android:layout_width="35dp"
                        android:layout_height="35dp"

                        android:layout_marginEnd="@dimen/_10ssp"
                        android:background="@drawable/baseline_flight_land_24"
                        android:backgroundTint="@color/white" />

                    <TextView
                        android:id="@+id/f_country_t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Country of destination"
                        android:textColor="@color/white"
                        android:textSize="25dp" />
                </LinearLayout>
                <Button
                    android:id="@+id/useFilter"

                    android:layout_width="match_parent"
                    android:textSize="@dimen/_15ssp"
                    android:layout_marginEnd="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_10ssp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:backgroundTint="@color/blue3"
                    android:text="Show results" />

            </LinearLayout>


        </ScrollView>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>