<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue3"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:background="@color/blue1"
        android:padding="@dimen/_10ssp"

        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/about">
        <ImageView
            android:layout_width="@dimen/_25ssp"
            android:layout_height="@dimen/_25ssp"
            android:background="@drawable/ic_back"
            android:backgroundTint="@color/white"
            android:id="@+id/back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="More about the post"
            android:textStyle="bold"
            android:paddingEnd="@dimen/_10ssp"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_us_info"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User"
            android:id="@+id/textUsername"
            android:textAlignment="center"
            android:textSize="@dimen/_25ssp"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user@gmail.com"
            android:id="@+id/post_email"
            android:textAlignment="center"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/wh"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/background_content_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_us_info">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textCategory"
                    android:text="Category"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_marginBottom="@dimen/_10ssp"
                    android:textColor="@color/blue3"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_10ssp"
                    android:padding="@dimen/_10ssp"
                    android:background="@drawable/oval_login_background">

                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/outline_feed_24"
                        android:backgroundTint="@color/blue1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="20dp"
                        android:textColor="@color/blue3"
                        android:textStyle="bold"
                        />



                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                        android:id="@+id/textDescription"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/oval_login_background"
                    android:padding="@dimen/_10ssp"
                    android:text="Description"
                    android:textColor="@color/blue1"
                    android:textSize="@dimen/_15ssp" />




                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_10ssp"
                    android:padding="@dimen/_10ssp"
                    android:background="@drawable/oval_login_background">



                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/baseline_connecting_airports_24"
                        android:backgroundTint="@color/green"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Destination country"
                        android:textSize="20dp"
                        android:textColor="@color/blue3"
                        android:textStyle="bold"
                        />


                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/destination"
                        android:layout_height="50dp"
                        android:background="@drawable/oval_login_background"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:padding="10dp"
                        android:inputType="text"
                        android:layout_marginTop="10dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Origin country"
                        android:textSize="20dp"
                        android:textColor="@color/blue3"
                        android:textStyle="bold"
                        />


                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/Origin"
                        android:layout_height="50dp"
                        android:background="@drawable/oval_login_background"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:padding="10dp"
                        android:inputType="text"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_10ssp"
                    android:padding="@dimen/_10ssp"
                    android:background="@drawable/oval_login_background">

                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/baseline_credit_card_24"
                        android:backgroundTint="@color/green"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product price"
                        android:textSize="20dp"
                        android:textColor="@color/blue3"
                        android:textStyle="bold"
                        />


                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/textProductPrice"
                        android:layout_height="50dp"
                        android:background="@drawable/oval_login_background"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:padding="10dp"
                        android:inputType="text"
                        android:layout_marginTop="10dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price for service"
                        android:textSize="20dp"
                        android:textColor="@color/blue3"
                        android:textStyle="bold"
                        />


                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/textServicePrice"
                        android:layout_height="50dp"
                        android:background="@drawable/oval_login_background"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:padding="10dp"
                        android:inputType="text"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_10ssp"
                    android:padding="@dimen/_10ssp"
                    android:background="@drawable/oval_login_background">

                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/libra"
                        android:backgroundTint="@color/green"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product weight"
                        android:textSize="20dp"
                        android:textColor="@color/blue3"
                        android:textStyle="bold"
                        />


                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/textWeight"
                        android:layout_height="50dp"
                        android:background="@drawable/oval_login_background"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:padding="10dp"
                        android:inputType="text"
                        android:layout_marginTop="10dp"/>




                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_10ssp"
                    android:padding="@dimen/_10ssp"
                    android:background="@drawable/oval_login_background">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/baseline_calendar_month_24"
                        android:backgroundTint="@color/green"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Until"
                        android:textSize="20dp"
                        android:textColor="@color/blue3"
                        android:textStyle="bold"
                        />


                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/textUntil"
                        android:layout_height="50dp"
                        android:background="@drawable/oval_login_background"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:padding="10dp"
                        android:inputType="text"
                        android:layout_marginTop="10dp"/>




                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_10ssp"
                    android:padding="@dimen/_10ssp"
                    android:background="@drawable/oval_login_background">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/baseline_location_on_24"
                        android:backgroundTint="@color/green"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="20dp"
                        android:textColor="@color/blue3"
                        android:textStyle="bold"
                        />


                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/textAddress"
                        android:layout_height="50dp"
                        android:background="@drawable/oval_login_background"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:padding="10dp"
                        android:inputType="text"
                        android:layout_marginTop="10dp"/>




                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_10ssp"
                    android:padding="@dimen/_10ssp"
                    android:background="@drawable/oval_login_background">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/baseline_insert_link_24"
                        android:backgroundTint="@color/green"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Link"
                        android:textSize="20dp"
                        android:textColor="@color/blue3"
                        android:textStyle="bold"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/textLink"
                        android:layout_height="50dp"
                        android:background="@drawable/oval_login_background"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:padding="10dp"
                       android:textSize="@dimen/_15ssp"
                        android:layout_marginTop="10dp"/>




                </LinearLayout>



            </LinearLayout>


        </ScrollView>










    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/blue4"
        android:text="CHAT"
        android:visibility="gone"
        android:id="@+id/new_chat"
        android:layout_marginBottom="@dimen/_20sdp"/>









</androidx.constraintlayout.widget.ConstraintLayout>