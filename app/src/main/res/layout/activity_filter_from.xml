<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:gravity="center"
    android:background="@color/blue1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BUYER.b.filterFrom">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginTop="8dp"

        android:orientation="vertical"

        android:background="@drawable/posts_b"

        tools:layout_editor_absoluteX="52dp">

        <TextView

            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="80dp"
            android:text="To"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Country of exchange of goods"
                android:textSize="20dp"
                android:layout_marginStart="@dimen/_10ssp"
                android:textColor="@color/blue3"
                android:textStyle="bold"
                />

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp2"
                android:background="@drawable/posts_b"
                android:paddingStart="@dimen/_40ssp"
                android:layout_margin="@dimen/_20sdp"
                android:paddingEnd="@dimen/_10sdp"
                app:ccp_textGravity="LEFT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ccp_showFullName="true"
                app:ccp_showNameCode="false"
                app:ccp_showPhoneCode="false" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/SecondCountry"
                android:background="@drawable/oval_login_background"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:textAlignment="center"

                android:layout_marginBottom="@dimen/_20sdp"
                android:inputType="text"
                android:layout_marginTop="10dp"/>
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>